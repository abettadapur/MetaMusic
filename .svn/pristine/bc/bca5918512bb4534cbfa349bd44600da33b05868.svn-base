<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/searchResultName" android:layout_alignParentLeft="true"
            android:layout_alignParentTop="false" android:layout_alignParentStart="true"
            android:gravity="center_vertical|left" android:layout_gravity="left"
            android:layout_marginLeft="35dp" android:layout_weight="1"
            style="@android:style/TextAppearance.DeviceDefault.Large"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/searchResultDetail" android:layout_alignParentRight="true" android:layout_alignTop="@+id/searchResultName"
            android:gravity="center_vertical|right" android:layout_gravity="right" android:password="false"
            style="@android:style/TextAppearance.DeviceDefault.Medium"/>
</LinearLayout>