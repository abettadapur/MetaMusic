<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_vertical|center_horizontal">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/listAlbumSongTextView"
            android:layout_weight="0.6"
            android:layout_marginLeft="35dp" style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:text="Text" android:gravity="center_vertical|center_horizontal|left"/>

    <ImageButton
            android:layout_width="0dp"
            android:layout_height="40dp"

            android:layout_weight="0.1"
            android:id="@+id/songAdd" android:layout_gravity="center_vertical|right"
            style="@android:style/MediaButton" android:src="@android:drawable/ic_menu_add" android:adjustViewBounds="false"
            android:longClickable="false" android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />


    <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/songPlay" android:layout_gravity="center_vertical|right" style="@android:style/MediaButton.Play"
            android:src="@android:drawable/ic_media_play" android:visibility="visible"

            android:layout_weight="0.1"/>
</LinearLayout>