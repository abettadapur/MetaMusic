<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/searchResultName"
            android:gravity="center_vertical|left" android:layout_gravity="left"
            android:layout_marginLeft="35dp" android:layout_weight="1"
            style="@android:style/TextAppearance.DeviceDefault.Large"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/searchResultDetail"
            android:gravity="center_vertical|right" android:layout_gravity="right"
            style="@android:style/TextAppearance.DeviceDefault.Medium"/>
</LinearLayout>